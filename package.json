{
  "name": "better-instagram-videos",
  "displayName": "Better instagram videos",
  "version": "1.2.1",
  "description": "Easily control the playback and volume of any Instagram videos.",
  "author": "Emir Kabal <me@emirkabal.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "package-all": "plasmo build && plasmo build --target=firefox-mv2 && plasmo package && plasmo package --target=firefox-mv2",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "classnames": "^2.5.1",
    "lodash.debounce": "^4.0.8",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "browser_specific_settings": {
      "gecko": {
        "id": "7f5862eb-3ab3-424c-aa6b-cf9311fba52f@emirkabal.com"
      }
    },
    "host_permissions": [
      "https://www.instagram.com/*"
    ],
    "permissions": [
      "storage"
    ]
  }
}
